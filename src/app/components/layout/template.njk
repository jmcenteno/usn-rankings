<article class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <section class="col-lg-9">
        {% block header %}
          {{ header | safe }}
        {% endblock %}
        <div class="row">
          <div class="col-lg-5">
            {% block badge %}
            {{ badge | safe }}
            {% endblock %}
          </div>
          <div class="col-lg-7 last">
            {% block rankings %}
            {{ rankings | safe }}
            {% endblock %}
          </div>
        </div>
      </section>
      <aside class="col-lg-3 col-xs-12 last">
        {% block advertisement %}
        {{ advertisement | safe }}
        {% endblock %}
      </aside>
    </div>
    <button type="button" class="toggle-btn">
      Toggle Ranking List
    </button>
  </div>
</article>
